---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Categories from "@/sections/home/Categories.astro";
import { getAllCategories } from "@/lib/data/categories";

import { createClient } from "@supabase/supabase-js";

const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_ANON_KEY
);

const categoriesData = await getAllCategories(supabase);

const title = "Categorías de Productos";
const description =
  "Explora todas nuestras categorías de productos - muebles de madera maciza diseñados con estilo y sostenibilidad.";

export const prerender = true;
---

<BaseLayout title={title} description={description}>
  <div class="page-header">
    <Categories
      categories={categoriesData}
      limit={8}
      showAllLink={false}
      title="Nuestras Categorías"
      description="Explora toda nuestra colección de productos organizados por categoría"
    />
  </div>

  <style>
    .page-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .page-header h1 {
      font-size: clamp(2rem, 4vw, 3rem);
      font-weight: 600;
      margin-bottom: 1rem;
      font-size: var(--font-primary);
      color: #1a1a1a;
    }

    .page-header p {
      font-size: clamp(1rem, 1.5vw, 1.125rem);
      line-height: 1.7;
      color: #666;
      max-width: 600px;
      margin: 0 auto;
    }

    @media (max-width: 768px) {
      .categories-page {
        padding: 2rem 1.25rem;
      }

      .page-header {
        margin-bottom: 2rem;
      }

      .category-overlay {
        padding: 1.5rem 1rem;
      }
    }
  </style>
</BaseLayout>
