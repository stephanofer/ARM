---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { createClient } from "@/lib/supabase";
import {
  getCategoryBySlug,
  getProductsByCategory,
  getSubcategoriesByCategory,
  getFilteredProducts,
} from "@/lib/products";
import { ProductsFilter } from "@/components/shop/ProductsFilter";
import CatalogHeader from "@/components/CatalogHeader.astro";
import { ProductsGrid } from "@/components/shop/ProductsGrid";
import { $totalProducts } from "@/shopStore"; // Necesitamos setear el total inicial
import { Pagination } from "@/components/shop/Pagination";
import { PAGE_SIZE } from "@/config";

const { params, url } = Astro;

const categorySlug = params.category;

if (!categorySlug) {
  return Astro.redirect("/categorias");
}

const supabase = createClient({
  request: Astro.request,
  cookies: Astro.cookies,
});

const category = await getCategoryBySlug(supabase, categorySlug);

if (!category) {
  return Astro.redirect("/categorias");
}

const subCategories = await getSubcategoriesByCategory(supabase, category.id);

const searchParams = Astro.url.searchParams;
const subCategorySlug = searchParams.get("subcategory");

let subCategoryId: number | null = null;
if (subCategorySlug) {
  const subObj = subCategories.find((s) => s.slug === subCategorySlug);
  if (subObj) {
    subCategoryId = subObj.id;
  }
}

const ssrFilters: Record<string, any> = {};
searchParams.forEach((value, key) => {
  if (key !== "subcategory" && key !== "page") {
    ssrFilters[key] = value;
  }
});
const page = Number(searchParams.get("page")) || 1;

const { data: initialProducts, total: initialTotal } =
  await getFilteredProducts(
    supabase,
    category.id,
    subCategoryId,
    ssrFilters,
    page,
    PAGE_SIZE
  );

const papeTitle = `Categoría: ${categorySlug.charAt(0).toUpperCase() + categorySlug.slice(1)}`;
const pageDescription = `Explora nuestra selección de productos en la categoría ${categorySlug} - muebles de madera maciza diseñados con estilo y sostenibilidad.`;
---

<BaseLayout title={papeTitle} description={pageDescription}>
  <section>
    <div class="breadcrumb">
      <a href="/">Inicio</a>
      <span class="separator">/</span>
      <a href="/categorias">Categorías</a>
      <span class="separator">/</span>
      <span class="current">{category.name}</span>
    </div>

    <div class="catalog-layout">
      <div class="filters-column">
        <ProductsFilter
          subCategories={subCategories}
          categoryId={category.id}
          initialFilters={ssrFilters}
          client:load
        />
      </div>

      <div class="products-column">
        <CatalogHeader title={category.name} totalProducts={initialTotal} />

        <ProductsGrid
          initialProducts={initialProducts}
          initialTotal={initialTotal}
          client:load
        />
        <Pagination initialTotal={initialTotal} client:load />

        <!-- {
          initialProducts.length === 0 && (
            <div class="empty-state">
              <svg
                width="80"
                height="80"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1"
              >
                <circle cx="11" cy="11" r="8" />
                <path d="m21 21-4.35-4.35" />
              </svg>
              <h3>No se encontraron productos</h3>
              <p>Intenta ajustar tus filtros o busca en otra categoría</p>
            </div>
          )
        } -->
      </div>
    </div>
    <!-- <MobileFilterToggle /> -->
  </section>

  <style>
    section {
      max-width: 1400px;
      padding-left: 1rem;
      padding-right: 1rem;
      margin: auto;
      margin-top: 2rem;
    }

    .breadcrumb {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 32px;
      font-size: 0.875rem;
      flex-wrap: wrap;
    }

    .breadcrumb a {
      color: #6b7280;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .breadcrumb a:hover {
      color: #111827;
    }

    .breadcrumb .separator {
      color: #d1d5db;
    }

    .breadcrumb .current {
      color: #111827;
      font-weight: 500;
    }

    .catalog-layout {
      display: grid;
      grid-template-columns: 280px 1fr;
      gap: 32px;
      align-items: start;
    }

    .filters-column {
      position: relative;
    }

    .products-column {
      min-width: 0;
    }

    .empty-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 80px 20px;
      text-align: center;
    }

    .empty-state svg {
      color: #d1d5db;
      margin-bottom: 24px;
    }

    .empty-state h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #111827;
      margin: 0 0 8px 0;
    }

    .empty-state p {
      font-size: 0.875rem;
      color: #6b7280;
      margin: 0;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 1024px) {
      .catalog-layout {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .filters-column {
        display: none;
      }

      .products-column {
        order: 1;
      }
    }

    @media (max-width: 768px) {
      .products-grid[data-view="grid"] {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 16px;
      }

      .catalog-layout {
        gap: 20px;
      }
    }

    @media (max-width: 480px) {
      .products-grid[data-view="grid"] {
        grid-template-columns: 1fr;
      }

      .breadcrumb {
        margin-bottom: 24px;
      }
    }
  </style>
</BaseLayout>
