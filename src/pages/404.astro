---
import BaseLayout from "@/layouts/BaseLayout.astro";

const title = "404 - Página no encontrada";
const description = "La página que buscas no existe o ha sido movida.";
---

<BaseLayout title={title} description={description}>
  <section class="error-container">
    <div class="error-content">
      <p class="error-label">ERROR 404</p>
      <h1 class="error-title">Página no encontrada</h1>
      <p class="error-description">
        La página que buscas debe de estar descansando en una de nuestras camas o literas
      </p>
      <p class="error-link-text">
        Puedes verlas volviendo a la <a href="/" class="error-link">Página de Inicio</a>
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  .error-container {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
    width: 100%;
  }

  .error-label {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #666;
    margin: 0 0 1.5rem 0;
  }

  .error-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 400;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    color: #1a1a1a;
  }

  .error-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    line-height: 1.6;
    color: #4a4a4a;
    margin: 0 0 1.5rem 0;
  }

  .error-link-text {
    font-size: clamp(1rem, 2vw, 1.125rem);
    line-height: 1.6;
    color: #4a4a4a;
    margin: 0;
  }

  .error-link {
    color: #1a1a1a;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s ease;
  }

  .error-link:hover {
    color: #666;
  }

  @media (max-width: 640px) {
    .error-container {
      padding: 1.5rem;
    }

    .error-content {
      padding: 0 1rem;
    }
  }
</style>
