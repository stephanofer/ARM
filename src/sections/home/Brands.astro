<style>
  .brands-container {
    max-width: 100%;
    margin: 0 auto;
  }

  .texts {
    margin-bottom: 2rem;
    text-align: center;
  }

  .brands-title {
    font-size: var(--fs-xl);
    font-family: var(--font-primary);
    font-weight: 450;
    margin-bottom: 0.5rem;
  }

  .brands-carousel-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 1) 0%,
      rgba(255, 255, 255, 0) 5%,
      rgba(255, 255, 255, 0) 95%,
      rgba(255, 255, 255, 1) 100%
    );
  }

  .brands-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 2rem 0;
  }

  .brands-track {
    display: flex;
    width: fit-content;
    animation: scroll-left 40s linear infinite;
    gap: 4rem;
  }

  .brands-carousel:hover .brands-track {
    animation-play-state: paused;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .brand-item {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    min-width: 180px;
    height: 100px;
    transition: all 0.3s ease;
  }

  .brand-logo {
    max-width: 140px;
    max-height: 70px;
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: grayscale(100%) brightness(0.8);
    opacity: 0.7;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .brand-item:hover .brand-logo {
    filter: grayscale(0%) brightness(1);
    opacity: 1;
    transform: scale(1.15);
  }

  @media (max-width: 768px) {
    .brands-track {
      gap: 3rem;
      animation-duration: 30s;
    }

    .brand-item {
      min-width: 140px;
      height: 80px;
      padding: 0.75rem 1.5rem;
    }

    .brand-logo {
      max-width: 110px;
      max-height: 55px;
    }
  }

  @media (max-width: 480px) {
    .brands-track {
      gap: 2rem;
      animation-duration: 25s;
    }

    .brand-item {
      min-width: 120px;
      height: 70px;
      padding: 0.5rem 1rem;
    }

    .brand-logo {
      max-width: 90px;
      max-height: 45px;
    }

    .texts {
      margin-bottom: 1.5rem;
    }

    .brands-title {
      font-size: var(--fs-lg);
    }
  }

  .brands-track {
    will-change: transform;
  }

  @media (prefers-reduced-motion: reduce) {
    .brands-track {
      animation-duration: 60s;
    }
  }
</style>
