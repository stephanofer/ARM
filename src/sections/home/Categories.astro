---
import SectionContainer from "@/components/SectionContainer.astro";
import type { Category } from "@/lib/data/types";
type Props = {
  categories: Category[];
  limit?: number;
  showAllLink?: boolean;
  title?: string;
  description?: string;
};
const { categories: allCategories, limit, showAllLink = true, title = "Categorías Destacadas", description = "Explora nuestras colecciones más populares" } = Astro.props;
const categories = limit ? allCategories.slice(0, limit) : allCategories;
---

<SectionContainer id="categories" class="mt-4">
  <div class="texts">
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
  <div class="categories-grid">
    {
      categories.map((category) => (
        <a
          href={`/categorias/${category.slug}`}
          class="category-card"
          style="text-decoration: none; color: inherit;"
        >
          <img
            src={category.image_url}
            alt={category.name}
            class="category-image"
            loading="lazy"
          />
          <div class="category-overlay">
            <h3 class="category-title">{category.name}</h3>
            <span class="category-link">Ver colección</span>
          </div>
        </a>
      ))
    }
  </div>
  {
    showAllLink && (
      <div class="view-all">
        <a href="/categorias" class="view-all-link">
          {" "}
          Ver todas las categorías{" "}
        </a>
      </div>
    )
  }
</SectionContainer>

<style>
  .texts {
    margin-bottom: 2rem;
  }

  h2 {
    font-size: var(--fs-xl);
    font-family: var(--font-primary);
    font-weight: 450;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.2rem;
  }

  .category-card {
    position: relative;
    aspect-ratio: 0.8 / 1.2;
    overflow: hidden;
    border-radius: 4px;
    cursor: pointer;
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }

  .category-card:hover .category-image {
    transform: scale(1.12);
  }

  .category-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1.5rem;
    text-align: center;
  }

  .category-title {
    font-size: var(--fs-xl);
    font-family: var(--font-primary);
    font-weight: 450;
    color: white;
    margin: 0;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    letter-spacing: 0.02em;
  }

  .category-link {
    font-size: 0.875rem;
    color: white;
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: opacity 0.2s ease;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  .category-link:hover {
    opacity: 0.8;
  }

  .view-all {
    text-align: center;
    margin: 1rem 0;
  }

  .view-all-link {
    font-size: 1rem;
    color: #333;
    text-decoration: none;
    position: relative;
    padding-bottom: 2px;
  }

  .view-all-link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: #333;
  }

  .view-all-link:hover {
    opacity: 0.7;
  }

  @media (max-width: 1024px) {
    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  @media (max-width: 640px) {
    .categories-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .category-card {
      aspect-ratio: 16 / 9;
    }
  }
</style>
