---
import SectionContainer from "@/components/SectionContainer.astro";

const collections = [
  {
    id: "dormitorio",
    title: "Dormitorio",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1505693416388-ac5ce068fe85?w=800&q=80"
  },
  {
    id: "montessori",
    title: "Montessori",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1631679706909-1844bbd07221?w=800&q=80"
  },
  {
    id: "comedor",
    title: "Comedor",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1615529182904-14819c35db37?w=800&q=80"
  },
  {
    id: "estudios",
    title: "Estudios",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1595526114035-0d45ed16cfbf?w=800&q=80"
  },
  {
    id: "a-medida",
    title: "A medida",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1538688525198-9b88f6f53126?w=800&q=80"
  },
  {
    id: "exterior",
    title: "Exterior",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?w=800&q=80"
  },
  {
    id: "serie-80",
    title: "Serie 80",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1555041469-a586c61ea9bc?w=800&q=80"
  },
  {
    id: "serie-105",
    title: "Serie 105",
    subtitle: "Ver colección",
    image: "https://images.unsplash.com/photo-1616594039964-ae9021a400a0?w=800&q=80"
  }
];
---

<SectionContainer class="collections-section" class="mt-4">
  <div class="collections-header">
    <h2>Catálogos</h2>
    <p>
      Nuestros muebles de madera maciza están pensados para adaptarse a cualquier espacio de tu casa.
      Sea cual sea tu necesidad, amueblado con estilo y sostenibilidad.
    </p>
  </div>

  <div class="collections-grid">
    {collections.map((collection) => (
      <a href={`/productos/${collection.id}`} class="collection-card">
        <div class="collection-image-wrapper">
          <img src={collection.image} alt={collection.title} class="collection-image" />
          <div class="collection-overlay">
            <h3 class="collection-title">{collection.title}</h3>
            <p class="collection-subtitle">{collection.subtitle}</p>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>

  .collections-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .collections-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 400;
    margin-bottom: 1rem;
    letter-spacing: 0.02em;
    color: #1a1a1a;
  }

  .collections-header p {
    font-size: clamp(0.95rem, 1.5vw, 1.1rem);
    line-height: 1.7;
    color: #666;
    max-width: 700px;
    margin: 0 auto;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 1200px) {
    .collections-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .collections-grid {
      grid-template-columns: 1fr;
    }
  }

  .collection-card {
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 3 / 4;
    background-color: #f5f5f5;
    cursor: pointer;
  }

  .collection-image-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .collection-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease-out;
  }

  .collection-card:hover .collection-image {
    transform: scale(1.15);
  }

  .collection-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.1) 100%
    );
    color: white;
    z-index: 2;
    pointer-events: none;
  }

  .collection-title {
    font-size: clamp(1.5rem, 2vw, 2rem);
    font-weight: 400;
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.02em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .collection-subtitle {
    font-size: clamp(0.9rem, 1.2vw, 1rem);
    margin: 0;
    opacity: 0.95;
    font-weight: 300;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .collection-card {
    transition: box-shadow 0.3s ease;
  }

  .collection-card:hover {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .collections-section {
      padding: 3rem 1.5rem;
    }

    .collections-header {
      margin-bottom: 2rem;
    }

    .collection-overlay {
      padding: 1.5rem 1rem;
    }
  }
</style>
